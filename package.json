{
  "name": "scrappyscraper",
  "version": "1.0.0",
  "description": "Server for scraper",
  "author": {
    "email": "seanntxj@gmail.com",
    "name": "seanntxj"
  },
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && electron-builder",
    "test": "tsx test.ts"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.2",
    "express": "^4.18.2",
    "puppeteer": "^21.0.2",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "tsx": "^3.12.10"
  },
  "build": {
    "appId": "com.seanntn.scrappyscraper",
    "productName": "Scrappy Scraper",
    "directories": {
      "output": "prod"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "icon/icon.ico" 
    }
  }
}
